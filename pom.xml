<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.fedoraproject.p2</groupId>
  <artifactId>fedoraproject-p2</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Fedora Project p2 Parent</name>

  <properties>
    <tycho-version>0.23.0</tycho-version>
    <xmvn-version>3.0.0</xmvn-version>
    <equinox-version>3.10.100.v20150521-1310</equinox-version>
  </properties>

  <modules>
    <module>org.fedoraproject.p2</module>
    <module>org.fedoraproject.p2.tests</module>
    <module>xmvn-p2-installer-plugin</module>
  </modules>

  <profiles>
    <profile>
      <id>luna</id>
      <properties>
        <platform-repo>http://download.eclipse.org/releases/luna</platform-repo>
      </properties>
    </profile>
    <profile>
      <id>mars</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <platform-repo>http://download.eclipse.org/releases/mars</platform-repo>
      </properties>
      <repositories>
        <repository>
          <id>orbit-repo</id>
          <layout>p2</layout>
          <url>http://download.eclipse.org/tools/orbit/downloads/drops/R20150519210750/repository/</url>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>eclipse-repo</id>
      <layout>p2</layout>
      <url>${platform-repo}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86</arch>
            </environment>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86_64</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
